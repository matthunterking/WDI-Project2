<div class="container">
  <h5 class=center-align><%= restaurant.restaurantName %></h5>
  <img class='center-align responsive-img customimg' src="<%= restaurant.img %>">
  <p>Address: <%= restaurant.address %></p>
  <p>City: <%= restaurant.city %></p>
  <p>Postcode: <%= restaurant.postcode %></p>
  <p>Cuisine: <%= restaurant.cuisine %></p>
  <p><i class="material-icons icon-green">thumb_up</i><%= restaurant.upVotes %></p>
  <p><i class="material-icons icon-red">thumb_down</i><%= restaurant.downVotes %></p>

 <% if(restaurant.comments.length > 0){ %>
   <table>
      <thead>
        <tr class='row rowHeight'>
          <th class='col s4 center-align'>Nibbler</th>
          <th class='col s6 center-align'>Review</th>
        </tr>
      </thead>
      <tbody>
          <% restaurant.comments.forEach(comments => { %>
            <% if(comments.createdBy) { %>
            <tr class='row rowHeight'>
                <td class='col s1'>
                        <img src="<%= comments.createdBy.profileImg %>" alt="" class="circle responsive-img">
                </td>
                <td class='col s5 center-align'>
                  <div class="valign-wrapper">
                        <span class="black-text">
                          <%= comments.createdBy.name %>
                        </span>
                  </div>
                </td>
                <td class='col s5'>
                      <span class="black-text">
                        <%= comments.comment %>
                      </span>
                </td>
                <td class='col s1'>
                      <span class="black-text">
                        <% if(comments.rating === 'U'){ %>
                          <i class="material-icons icon-green">thumb_up</i>
                        <% } else if (comments.rating === 'D'){ %>
                          <i class="material-icons icon-red">thumb_down</i>
                        <% } %>
                      </span>
                </td>
            </tr>
            <% } %>
          <% }) %>
      </tbody>
  </table>
<% } else { %>
  <p>Be the first to review <%= restaurant.restaurantName %></p>
<% } %>
<hr>
 <% if(locals.isLoggedIn){ %>
   <div class="row">
     <form class="col s12" action="/restaurant/<%= restaurant._id %>" method="POST">
       <div class="row">
         <div class="input-field col s12">
           <textarea name="comment" id="comment" class="materialize-textarea"></textarea>
           <label for="comment">Write your review here</label>
         </div>
         <input type="hidden" class="rating" name="rating"></input>
          <a class="btn-floating btn-large waves-effect waves-light grey upvote" value="U"><i class="material-icons">thumb_up</i></a>
          <a class="btn-floating btn-large waves-effect waves-light grey downvote" value="D"><i class="material-icons">thumb_down</i></a>
          <input type="hidden" name="createdBy" value="<%= user._id %>">
         <button class="green btn">Submit</button>
       </div>
     </form>
   </div>
<% } else { %>
  <p>You must be logged in to make a comment</p>
  <a href='/signin'>Login</a>
  <a href='/register'>Sign up</a>
<% } %>

</div>

<hr>

<a href='/restaurant/<%= restaurant._id %>/edit'>Edit Restaurant</a>
